php_flag display_errors off

# Specify our error pages.
ErrorDocument 404 /404.php

RewriteEngine On
RewriteBase /

### SAMPLE REWRITERULES ###

# Requests for a specific section.
RewriteRule ^([0-9A-Za-z\.]{1,4})-([0-9A-Za-z\.:]{1,10})/$ /law.php?section_number=$1-$2 [QSA]

RewriteRule ^([0-9A-Za-z\.]{1,4})-([0-9A-Za-z\.:]{1,10})-([0-9A-Za-z\.:]{1,10})/$ /law.php?section_number=$1-$2-$3 [QSA]
RewriteRule ^([0-9A-Za-z\.]{1,4})-([0-9A-Za-z\.:]{1,10})-([0-9A-Za-z\.:]{1,10})-([0-9A-Za-z\.:]{1,10})/$ /law.php?section_number=$1-$2-$3-$4 [QSA]

# Requests for a specific chapter.
RewriteRule ^([0-9A-Za-z\.]{1,4})/([0-9a-z:\.]{1,8})/$ /structure.php?article_number=$1&section_number=$2 [QSA]

# Requests for a specific title.
RewriteRule ^([0-9A-Za-z\.]{1,4})/$ /structure.php?article_number=$1 [QSA]

# Requests for the about page.
RewriteRule ^about/$ /about.php [QSA]

#Requests for the projects page.
RewriteRule ^projects/$ /projects.php [QSA]

#Requests for the faq and infographic pages
RewriteRule ^faq/$ /faq.php [QSA]
RewriteRule ^infographic/$ /infographic.php [QSA]

#Searches
RewriteRule ^search/$ /search.php [QSA]

# Requests for the API key registration page.
RewriteRule ^api-key/$ /api-key.php [QSA]

# If this is a request for a plain-text version of a page, translate the extention into a specific
# request.
RewriteRule ^(.*)\.txt$ /$1/?plain_text=y